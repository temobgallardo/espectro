<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp">
    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/signin_et_user_name"
        android:gravity="center"
        android:fontFamily="sans-serif"
        app:MvxBind="Text UserName"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/signin_et_password"
        android:gravity="center"
        android:inputType="textPassword"
        app:MvxBind="Text Password"/>
    <Button
        android:id="@+id/btn_signin"
        android:text="@string/signin_btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:MvxBind="Click SignInCommand; Enabled IsUserOrPassOk"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_no_account_txt"
            android:text="@string/signin_tv_new_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tv_sign_up"
            android:text="@string/signin_tv_sign_up"
            android:clickable="true"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#00BFFF"
            app:MvxBind="Click SignUpCommand"/>
    </LinearLayout>
</LinearLayout>
