<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:hapticFeedbackEnabled="false">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/signin_et_user_name"
            android:gravity="center"
            app:MvxBind="Text UserName"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toLeftOf="@id/til_user_name"
        app:layout_constraintTop_toBottomOf="@id/til_user_name"
        android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/signin_et_password"
            android:gravity="center"
            android:inputType="textPassword"
            android:layout_margin="4dp"
            app:MvxBind="Text Password"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/btn_signin"
        android:text="@string/signin_btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/abc_btn_colored_material"
        app:layout_constraintTop_toBottomOf="@id/til_et_password"
        app:layout_constraintBottom_toTopOf="@id/tv_no_account_txt"
        app:MvxBind="Click SignInCommand; Enabled IsUserOrPassOk"/>
    <TextView
        android:id="@+id/tv_no_account_txt"
        android:text="@string/signin_tv_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/btn_signin"
        app:layout_constraintLeft_toLeftOf="@id/btn_signin"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_sign_up"
        android:text="@string/signin_tv_sign_up"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#00BFFF"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/btn_signin"
        app:layout_constraintLeft_toRightOf="@id/tv_no_account_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:MvxBind="Click SignUpCommand"/>
</android.support.constraint.ConstraintLayout>
