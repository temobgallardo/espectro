<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:hapticFeedbackEnabled="false">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_user_et_first_name"
            android:inputType="textPersonName"
            android:gravity="center"
            android:layout_margin="4dp"
            app:MvxBind="Text FirstName"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toLeftOf="@id/til_first_name"
        app:layout_constraintTop_toBottomOf="@id/til_first_name"
        android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_user_et_last_name"
            android:gravity="center"
            android:layout_margin="4dp"
            android:inputType="textPersonName"
            app:MvxBind="Text LastName"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toLeftOf="@id/til_last_name"
        app:layout_constraintTop_toBottomOf="@id/til_last_name"
        android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_user_et_user_name"
            android:gravity="center"
            android:layout_margin="4dp"
            android:inputType="text"
            app:MvxBind="Text UserName"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toLeftOf="@id/til_user_name"
        app:layout_constraintTop_toBottomOf="@id/til_user_name"
        android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_user_et_phone_number"
            android:gravity="center"
            android:layout_margin="4dp"
            android:inputType="phone"
            app:MvxBind="Text PhoneNumber, Mode=TwoWay"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toLeftOf="@id/til_phone_number"
        app:layout_constraintTop_toBottomOf="@id/til_phone_number"
        android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_user_et_password"
            android:gravity="center"
            android:inputType="textPassword"
            android:layout_margin="4dp"
            app:MvxBind="Text Password"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/tv_dp_service_start"
        android:hint="@string/btn_select_service_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:inputType="date"
        android:background="@drawable/abc_edit_text_material"
        app:layout_constraintLeft_toLeftOf="@id/til_password"
        app:layout_constraintTop_toBottomOf="@id/til_password"
        app:MvxBind="Value ServiceDate Converter=StringToDateTime Way=OneWayToSource" />
    <Button
        android:id="@+id/btn_create_account"
        android:text="@string/add_user_btn_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/abc_btn_colored_material"
        app:layout_constraintLeft_toLeftOf="@id/tv_dp_service_start"
        app:layout_constraintTop_toBottomOf="@id/tv_dp_service_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:MvxBind="Click SignUpCommand; Enabled AreFieldsPopulated"/>
</android.support.constraint.ConstraintLayout>
