<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:hapticFeedbackEnabled="false">
    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_user_et_first_name"
        android:gravity="center"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:MvxBind="Text FirstName"/>
    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_user_et_last_name"
        android:gravity="center"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toLeftOf="@id/et_first_name"
        app:layout_constraintTop_toBottomOf="@id/et_first_name"
        app:MvxBind="Text LastName"/>
    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_user_et_user_name"
        android:gravity="center"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toLeftOf="@id/et_last_name"
        app:layout_constraintTop_toBottomOf="@id/et_last_name"
        app:MvxBind="Text UserName"/>
    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_user_et_phone_number"
        android:gravity="center"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toLeftOf="@id/et_user_name"
        app:layout_constraintTop_toBottomOf="@id/et_user_name"
        app:MvxBind="Text PhoneNumber"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_user_et_password"
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toLeftOf="@id/et_phone_number"
        app:layout_constraintTop_toBottomOf="@id/et_phone_number"
        app:MvxBind="Text Password"/>
    <Button
        android:id="@+id/dp_service_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_select_service_date"
        android:background="@drawable/abc_ab_share_pack_mtrl_alpha"
        android:layout_margin="4dp"
        android:padding="16dp"
        app:layout_constraintRight_toRightOf="@id/et_password"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        />
    <Button
        android:id="@+id/btn_create_account"
        android:text="@string/add_user_btn_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/abc_btn_colored_material"
        app:layout_constraintLeft_toLeftOf="@id/dp_service_start"
        app:layout_constraintTop_toBottomOf="@id/dp_service_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:MvxBind="Click SignUpCommand; Enabled AreFieldsPopulated"/>
</android.support.constraint.ConstraintLayout>
