<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_successful_signup"
        android:background="@drawable/successful_signup"
        android:layout_marginLeft="0.0dp"
        android:layout_marginRight="0.0dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_successful_signup"
        android:textSize="14dp"
        android:id="@+id/tv_successful_signup"/>
    <Button
        android:id="@+id/btn_login"
        android:text="@string/signin_btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:MvxBind="Click NavigateToLoginCommand"/>
</LinearLayout>
